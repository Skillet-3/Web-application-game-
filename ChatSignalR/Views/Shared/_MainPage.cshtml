<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="mainPageBody">
    <div class="navbar navbar-inverse navbar-fixed-top navbar-main-page">
        <div class="container container-main-page">
            <div class="navbar-header navbar-header-main-page">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/dvarf_Logo.png" class="img-button" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-nav-main-page">
                    <li class="li-nav"><a href="@Url.Action("Index", "Home")"><img src="~/Content/img/news.png" class="img-button" /></a></li>
                    <li class="li-nav"><a href="@Url.Action("Contact", "Home")"><img src="~/Content/img/for.png" class="img-button" /></a></li>
                    <li class="li-nav"><a href="@Url.Action("Contact", "Home")"><img src="~/Content/img/lib.png" class="img-button" /></a></li>
                    <li class="li-nav"><a href="@Url.Action("Contact", "Home")"><img src="~/Content/img/help.png" class="img-button" /></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
         
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
