body {
    padding-top: 50px;
    padding-bottom: 20px; 
}

/* Set padding to keep content from hitting the edges */
.body-content {
    /*display: inline-block;*/
    padding: 15px;   
}

/* Override the default bootstrap behavior where horizontal description lists 
   will truncate terms that are too long to fit in the left column 
*/
.dl-horizontal dt {
    white-space: normal;
}

/* Set width on the form input elements since they're 100% wide by default */
input,
select,
textarea {
    max-width: 900px;
}


.chat{
	border: 1px solid black;
	border-radius: 4px;  
}

.fullChat {
  width: 100%;
  bottom: 0;
  right: 0;
  margin: 0 0 30px -15px;
  background: #fff;  
  position: fixed; 
  box-shadow: 0px -10px 10px #fff;
}

.chat.vertical{
    position:   relative;
    width:      100%;
    height:     200px;
    border: 1px solid #ccc;
}

.message_container{
	overflow-y:   auto;
    position:   absolute;
    bottom:     0;
    width: 85%;
    max-height: 200px;
    padding: 0 10px;
}

.message{
	word-break: break-all;
	padding: 1px 3px;
	margin: 0px 10px; 
}

.message i {
    font-size: 12px;
    color: #100ef5;
}

.input_container{
	height: 27px; 
    width: 60%;
    position: absolute;
    top: 100%;
    margin: 0 50px;
}
.input_container>textarea{
	resize: none; 
    width: 80%;
	height: 100%;
    padding-left: 10px;
}
.input_container>input[type = "button"]{
	width: 50px;
	height: 27px;
}

.active_users{
    position: absolute;
    overflow:   auto;
    width: 15%; 
    height: 100%;
    padding: 7px;
    right: 0;
    border: 1px solid #ccc;
} 

.active_users > a{
    display:block;
}