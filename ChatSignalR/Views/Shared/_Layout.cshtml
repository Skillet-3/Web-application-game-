<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="secondPageBody">
    <div class="navbar navbar-inverse navbar-fixed-top navbar-second-page">
        <div class="container">
            <div class="navbar-header navbar-header-main-page">
                <a href="@Url.Action("Index", "Home")"><img src="~/Content/img/dvarf_Logo.png" class="img-button" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-nav-main-page">
                    <li class="li-nav"><a href="@Url.Action("Contact", "Home")"><img src="~/Content/img/news-second.png" class="img-button" /></a></li>
                    <li class="li-nav"><a href="@Url.Action("Contact", "Home")"><img src="~/Content/img/for-second.png" class="img-button" /></a></li>
                    <li class="li-nav"><a href="#" onclick="showContent('@Url.Action("Inventory", "Home")', window.DrawHpAndManaBar)"><img src="~/Content/img/inv-second.png" class="img-button" /></a></li>
                    <li class="li-nav"><a href="#" onclick="showContent('@Url.Action("Battles", "Home")')"><img src="~/Content/img/fight-second.png" class="img-button" /></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content container-second-page">
        @RenderBody()

        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/signalr")
    <script src="~/signalr/hubs"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
